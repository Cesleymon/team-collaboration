def add_cards(player_hand, deck):
    card = deal_card(deck)
    player_hand.append(card)
    score = calculate_score(player_hand)
    if score > 21:
        return True
    else:
        return False

def player_turn(player_hand, deck):
while True:
score = calculate_score(player_hand)
if score > 21:
return "Bust"
if score == 21:
return "Winner"
if score < 17:
busted = add_cards(player_hand, deck)
if busted:
return "Bust"
else:
return "Final score: " + str(score)

